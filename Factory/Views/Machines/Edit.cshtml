@{
  Layout = "_Layout";
}

@model Factory.Models.Machine

<h2>Edit</h2>

<h4>Edit: @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.MachineId)

  @Html.LabelFor(model => model.Name)
  @Html.EditorFor(model => model.Name)

  @Html.LabelFor(model => model.MachineType)
  @Html.EditorFor(model => model.MachineType)

  @Html.LabelFor(model => model.AverageRepairTime)
  @Html.EditorFor(model => model.AverageRepairTime)

  @Html.LabelFor(model => model.RepairsNeeded)
  @Html.EditorFor(model => model.RepairsNeeded)

  @Html.Label("Select Engineer")
  @Html.DropDownList("EngineerId")

  <input type="submit" value="Save" />
}
<p>@Html.ActionLink("Back to All Machines", "Index")</p>