@{
  Layout = "_Layout";
}

@using Factory.Models
@model List<Factory.Models.MachineEngineer>

<h1>All Machines and Engineers</h1>

@if (Model.Count == 0)
{
  <h3><em>You have no Engineers on staff yet or Machines installed</em></h3>
}
<div class="row">
  <div class="col-6">
    <div class="card" id="machine-card">
      <div class="card-body">
        <h4>All Machines</h4>
        @foreach (MachineEngineer machine in Model)
        {
          <li>@Html.ActionLink($"{machine.Machine.Name}", "Details", "Machines", new { id = machine.Machine.MachineId })</li>
        }
      </div>
    </div>
  </div>
  <div class="col-6">
    <div class="card" id="engineer-card">
      <div class="card-body">
        <h4>All Engineers</h4>
        @foreach (MachineEngineer engineer in Model)
        {
          if (engineer.EngineerId == engineer.EngineerId)
          {
            <li>@Html.ActionLink($"{engineer.Engineer.Name}", "Details", "Engineers", new { id = engineer.Engineer.EngineerId })</li>
          }
        }
      </div>
    </div>
  </div>
</div>
